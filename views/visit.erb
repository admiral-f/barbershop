      <div class="col-xs-6">
       <label>Choose your barber</label> 
        <select class="form-control" name="barber" >
          <% @barber_name.each do |item| %>
            <option <%= @barber == item['Barber'] ? 'selected' : '' %>><%= item['Barber'] %></option>
